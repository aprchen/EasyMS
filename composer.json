{
    "name": "sl/micro-service",
    "description": "miro-service",
    "type": "library",
    "authors": [
        {
            "name": "ott321",
            "email": "ott321@yeah.net"
        }
    ],
    "license": "Apache",
    "require": {
        "php": ">=7.1",
        "ext-phalcon": "^3.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.11",
        "phalcon/ide-stubs": "^3.3",
        "phpunit/phpunit": "^6"
    },
    "autoload": {
        "psr-4": {
            "EasyMS\\": "src/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('config.ini') || copy('.src/default.config.ini', 'config.ini');\"",
            "@php -r \"file_exists('docker-compose.yml') || copy('.src/docker-compose.yml', 'docker-compose.yml');\"",
            "@php -r \"file_exists('nginx.conf') || copy('.src/nginx.conf', 'nginx.conf');\""
        ],
        "test": "./vendor/bin/phpunit -c phpunit.xml"
    }
}
