{
    "name": "aprchen/easy-ms",
    "description": "miro-service",
    "type": "library",
    "authors": [
        {
            "name": "ott321",
            "email": "ott321@yeah.net"
        }
    ],
    "license": "Apache-2.0",
    "require": {
        "monolog/monolog": "^1.23",
        "doctrine/annotations": "^1.6",
        "symfony/filesystem": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.11",
        "phalcon/ide-stubs": "^3.3",
        "phpunit/phpunit": "^6"
    },
    "autoload": {
        "psr-4": {
            "EasyMS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EasyMsTest\\": "test/Cases"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('config/config.ini') || copy('config/default.config.ini', 'config/config.ini');\"",
            "php -r \"file_exists('docker-compose.yml') || copy('config/default.docker-compose.yml', 'docker-compose.yml');\"",
            "php -r \"file_exists('config/nginx.conf') || copy('config/default.nginx.conf', 'config/nginx.conf');\""
        ],
        "test": "./vendor/bin/phpunit -c phpunit.xml"
    }
}
